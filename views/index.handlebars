<!DOCTYPE html>
<html>
    <head>
        <title>BREAKTIME - Login</title>
        <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="css/entry.css" />
    </head>
    <body>
        <center>
          <div id = "content" align = "center"> 
            <img src = "../images/logo.png" style = "width:500px"><br><br>
            <div style = "background-color:#ffffff; padding:30px; border-radius: 20px; opacity: 0.8">
                <h2>LOGIN</h2>
                <span id = "loginerror"></span>
                <form align = "justify" method = "post" action = "/registerHandler" id ="login">
                    <div id = "formtop" class = "form-group">
                        <label for = "emailfield">Email address: </label><br>
                        <input id = "emailfield" name = "email" type = "email" class = "form-control" placeholder="Email"></input>
                        <label for = "passwordfield">Password: </label><br>
                        <input id = "passwordfield" name = "password" type = "password" class = "form-control" placeholder="Password"></input>
                        <input type = "hidden" id = "timerinterval" name = "timerinterval" value = "00:20:00">
                        <br>
                    </div>
                    
                <center>
                    <input id= "submit_btn" class = "btn btn-default btn-xlarge" type = "submit" value = "Login">
                </center>
                </form>
                <br>
                Don't have an account? <a href = "/register">Click</a> to sign up.
            </div>
        </center>
        <div id = "bottomspace"></div>
        <script src="https://code.jquery.com/jquery.js"></script>
        <script type = "text/javascript">
            $(document).ready(function(){
  
                $('#submit_btn').click(function(e){
                    var email = $('#emailfield').val();
                    var password = $("#passwordfield").val();

                    $.ajax('/fakeuser.json', {
                        dataType: 'json',
                        success: function(results){
                            console.log(email, password);
                            console.log(results.email, results.password);
                            if(results.email != email || results.password != password){
                                e.preventDefault();
                                $("#loginerror").text("Login failed. Incorrect email or password.");
                                return false;
                            }
                            else
                                $("#login").submit();

                        }
                    });

                    return false;
                });
            });
        </script>
    </body>
</html>
